{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "apps/frontend",
      },
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "apps/backend",
      },
      "problemMatcher": []
    },
    {
      "label": "Start worker",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "apps/worker",
      },
      "problemMatcher": []
    },
    {
      "label": "Start Prisma Studio",
      "type": "shell",
      "command": "pnpx",
      "args": ["prisma", "studio"],
      "options": {
        "cwd": "packages/db",
      },
      "problemMatcher": []
    },
    {
      "label": "Start Code Server",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up"],
      "options": {
        "cwd": "apps/code-server"
      },
      "problemMatcher": []
    },
    {
      "label": "Run DB",
      "type": "shell",
      "command": "open",
      "args": ["-a", "Docker"],
      "options": {},
      "problemMatcher": []
    },
    {
      "label": "Start Docker Container",
      "type": "shell",
      "command": "docker",
      "args": ["start", "my-docker"],
      "options": {},
      "problemMatcher": []
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Frontend",
        "Start Backend",
        "Start Prisma Studio",
        "Start Code Server",
        "Start Docker Container",
        "Run DB"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
